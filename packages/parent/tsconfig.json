{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "stripInternal": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": ".",
    "sourceMap": true,
    "target": "es5",
    "skipLibCheck": true,
    "lib": [
      "es2015", 
      "es2015.reflect",
      "dom"
    ]
  },
  "exclude": [ 
    "node_modules",
    "**/*.spec.ts"
  ]
}
